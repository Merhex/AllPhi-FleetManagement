@page "/licensePlates/details/{identifier}"
@using Blazor.Responses

<Heading Size="HeadingSize.Is3">Details for license plate: @Identifier</Heading>
<Divider />


<Heading Size="HeadingSize.Is4">History</Heading>
<Loader Loading="@IsInitializing">
    <DataGrid TItem="LicensePlateSnapshotResponse"
              Data="@LicensePlate.History"
              Filterable="true"
              FilterMethod="DataGridFilterMethod.Contains">
        <ChildContent>
            <DataGridColumn TItem="LicensePlateSnapshotResponse" Field="@nameof(LicensePlateSnapshotResponse.MotorVehicle.ChassisNumber)" Caption="VIN"></DataGridColumn>
            <DataGridColumn TItem="LicensePlateSnapshotResponse" Field="@nameof(LicensePlateSnapshotResponse.MotorVehicle.Brand)" Caption="Brand"></DataGridColumn>
            <DataGridColumn TItem="LicensePlateSnapshotResponse" Field="@nameof(LicensePlateSnapshotResponse.MotorVehicle.Model)" Caption="Model"></DataGridColumn>
            <DataGridCheckColumn TItem="LicensePlateSnapshotResponse" Field="@nameof(LicensePlateSnapshotResponse.InUse)">
                <DisplayTemplate>
                    <Check TValue="bool" Checked="context.InUse" Disabled="true" ReadOnly="true" />
                </DisplayTemplate>
            </DataGridCheckColumn>
        </ChildContent>
        <EmptyTemplate>
            <Paragraph>No items to be displayed.</Paragraph>
        </EmptyTemplate>
        <LoadingTemplate>
            <Loader />
        </LoadingTemplate>
    </DataGrid>
</Loader>